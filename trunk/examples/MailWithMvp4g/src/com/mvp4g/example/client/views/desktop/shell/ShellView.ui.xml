<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:mvp4g="urn:import:com.google.gwt.user.client.ui">

  <g:DockLayoutPanel unit='PX'>
    <g:north size='95'>
      <g:SimpleLayoutPanel ui:field='topPanel'/>
    </g:north>

    <g:center>
      <g:SplitLayoutPanel ui:field="splitter">
        <g:west size='192'>
          <g:SimpleLayoutPanel ui:field='shortcuts'/>
        </g:west>

        <g:center>
          <g:SimpleLayoutPanel ui:field='mailList' height="100%"/>
        </g:center>

        <g:south size="300">
          <g:SimpleLayoutPanel ui:field='mailDetail'/>
        </g:south>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>
